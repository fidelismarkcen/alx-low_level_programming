# Variables
CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f

# Build the executable
all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

# Clean temporary files
clean:
	$(RM) *~ $(OBJ)

# Clean object files
oclean:
	$(RM) $(OBJ)

# Clean all temporary files and executable
fclean: clean
	$(RM) $(NAME)

# Rebuild everything
re: fclean all
